<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.mall">
	<resultMap id="proResult" type="productVO">
		<result property="pseq" column="pseq" />
		<result property="name" column="name" />
		<result property="kind" column="kind" />
		<result property="price1" column="price1" />
		<result property="price2" column="price2" />
		<result property="price3" column="price3" />
		<result property="content" column="content" />
		<result property="image" column="image" />
		<result property="useyn" column="useyn" />
		<result property="bestyn" column="bestyn" />
		<result property="indate" column="indate" />

	</resultMap>

	<select id="checkWorker" resultType="java.lang.Integer">
      <![CDATA[
     	SELECT COUNT(*) FROM worker WHERE id=#{id} AND pwd=#{pwd}
      ]]>
	</select>
	<select id="showProductList" resultMap="proResult">
      <![CDATA[
     	select * from product
      ]]>
	</select>
	<select id="selectProduct" resultMap="proResult">
      <![CDATA[
     	select * from product where pseq = #{pseq}
      ]]>
	</select>
	<update id="updateProduct" parameterType="productVO">
	<![CDATA[
		update product
		set name=#{name}, price1=#{price1}, price2=#{price2}, price3=#{price3},
		content=#{content}
		where pseq=#{pseq}]]>
	</update>


	<!-- 베스트 상품 -->
	<select id="bestProduct" resultType="productVO">
      <![CDATA[
     	select *  from best_pro_view
      ]]>
	</select>

	<!-- 상품 번호 가져오기 -->
	<select id="selectPseq" resultType="productVO" parameterType="int">
    <![CDATA[
        select * from product where pseq=#{pseq}   
    ]]>
	</select>

	<!-- 상품 카테고리 -->
	<select id="selectKind" resultType="productVO" parameterType="int">
      <![CDATA[
     	select * from product where kind=#{kind}
      ]]>
	</select>

</mapper>